<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;net48</TargetFrameworks>
    <Platforms>AnyCPU;x64</Platforms>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>NanoProxy</Title>
    <Authors>margadz</Authors>
    <Copyright>margadz</Copyright>	
    <Version>0.3.4</Version>
	<PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageProjectUrl>https://https://github.com/margadz/NanoProxy</PackageProjectUrl>
    <RepositoryUrl>https://github.com/margadz/NanoProxy.git</RepositoryUrl>	
	<RepositoryType>git</RepositoryType>
  </PropertyGroup>
    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\" />
		<None Include="..\LICENSE" Pack="true" PackagePath="\" />
    </ItemGroup>
    <PropertyGroup>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <Description>NanoProxy is a lightweight .NET library for generating runtime proxies that intercept property setters.</Description>
    </PropertyGroup>
    <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net9.0|AnyCPU'">
      <WarningLevel>5</WarningLevel>
    </PropertyGroup>
    <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net9.0|x64'">
      <WarningLevel>5</WarningLevel>
    </PropertyGroup>
    <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net9.0|AnyCPU'">
      <WarningLevel>5</WarningLevel>
    </PropertyGroup>
    <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net9.0|x64'">
      <WarningLevel>5</WarningLevel>
    </PropertyGroup>	
</Project>
